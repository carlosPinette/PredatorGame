<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="predator.app.map4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="World 4"
        android:id="@+id/ttlemap1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="187dp"
        android:textColor="#383a35"
        android:textSize="60dp" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnbckmp4"
        android:src="@drawable/left"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@null"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="toGeneralMap4" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnstrmp4"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@null"

        android:src="@drawable/tienda"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:layout_alignTop="@+id/btnbckmp4"
        android:layout_toRightOf="@+id/btnbckmp4"
        android:layout_marginLeft="35dp" />

</RelativeLayout>
