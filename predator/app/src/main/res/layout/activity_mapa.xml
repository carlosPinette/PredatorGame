<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="predator.app.mapa"
    android:background="@drawable/wmapemp">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/map1"
        android:background="@drawable/isla1"

        android:minHeight="95dp"
        android:minWidth="310dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="map1"


        android:layout_marginTop="22dp"
        android:layout_marginLeft="115dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onMap1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/map2"
        android:background="@drawable/isla2"

        android:minHeight="120dp"
        android:minWidth="115dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="map2"

        android:maxHeight="300dp"
        android:layout_marginTop="52dp"
        android:layout_alignTop="@+id/map1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="83dp"
        android:onClick="onMap2" />
    <ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/map3"
    android:background="@drawable/isla3"

    android:minHeight="87dp"
    android:minWidth="210dp"
    android:scaleType="fitCenter"
    android:adjustViewBounds="true"
    android:contentDescription="map3"

    android:layout_marginRight="43dp"
    android:layout_alignTop="@+id/map2"
    android:layout_alignRight="@+id/map1"
    android:layout_alignEnd="@+id/map1"
    android:layout_marginTop="20dp"
    android:longClickable="false"
        android:onClick="onMap3" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/map4"
        android:background="@drawable/isla4"

        android:minHeight="180dp"
        android:minWidth="170dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="map4"

        android:longClickable="false"
        android:layout_marginLeft="64dp"
        android:layout_alignTop="@+id/map2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:onClick="onMap4" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/map5"
        android:background="@drawable/isla5"

        android:minHeight="90dp"
        android:minWidth="200dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="map4"

        android:longClickable="false"
        android:layout_alignBottom="@+id/map4"
        android:layout_alignRight="@+id/map1"
        android:layout_alignEnd="@+id/map1"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="6dp"
        android:onClick="onMap5" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnstore"
        android:src="@drawable/tienda"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@null"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
